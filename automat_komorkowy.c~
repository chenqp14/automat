#include <stdio.h>
#include <stdlib.h>
#include "wczytywanie.h"
#include "zasady_o_sasiedztwie.h"

int zmien_kom(int i, int p, matrix_t *stara){
	int stan=0;
	if(stara->e[p]==1) stan=1;
	if(stan==0&&i==3) stan=1;
	else {
			if(stan==1 && (i==2 ||i==3)) stan=1;
			if(stan==1 && (i>3 || i<2)) stan=0;
	}
	return stan;
}
matrix_t *zapisz_siatke( matrix_t *stara, matrix_t *nowa){
	int pom=0;
	int i=0;
	for(pom=0;pom<stara->rn*stara->cn; pom++){
		i=search_in_neighborhood(pom, stara);	
		nowa->e[pom]=zmien_kom( search_in_neighborhood(pom, stara), pom , stara);
	}
	return nowa;
}
